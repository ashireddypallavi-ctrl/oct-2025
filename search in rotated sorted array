class Solution(object):
    def search(self,arr,key ):
        low=0
        high=len(arr)-1
        ans= -1
        while(low<=high):
            mid=(low+high)//2
            if(arr[mid]==key):
                return mid
            #check left half is sorted or not
            elif(arr[low]<=arr[mid]):
            #check element exist in sorted half
                if(arr[low]<=key<=arr[mid]):
                    high=mid-1
                else:
                    low=mid+1
            #check right half is sorted or not
            elif(arr[mid]<=arr[high]):
            #check ele exist in sorted right half
                if(arr[mid]<=key<=arr[high]):
                    low=mid+1
                else:
                    high=mid-1
        return -1
